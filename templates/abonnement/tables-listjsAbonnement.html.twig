{% extends 'back.html.twig' %}

{% block body %}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                        <h4 class="mb-sm-0">Listjs</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                <li class="breadcrumb-item active">Listjs</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title mb-0">Add, Edit & Remove</h4>
                        </div><!-- end card header -->

                        <div class="card-body">


                            <div class="table-responsive table-card mt-3 mb-1">
                                <table class="table align-middle table-nowrap" id="customerTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col" style="width: 50px;">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" id="checkAll" value="option">
                                                </div>
                                            </th>
                                            <th class="sort" data-sort="id">Id</th>
                                            <th class="sort" data-sort="date">Date</th>
                                            <th class="sort" data-sort="prix">Prix</th>
                                            <th class="sort" data-sort="terrainId">TerrainId</th>
                                            <th class="sort" data-sort="nomPack">NomPack</th>
                                            <th class="sort" data-sort="nomTerrain">NomTerrain</th>
                                            <th class="sort" data-sort="nomUser">NomUser</th>
                                            <th class="sort" data-sort="numtel">NumeroTel</th>
                                            <th class="sort" data-sort="prixTotal">PrixTotal</th>

                                        </tr>
                                    </thead>
                                    {% for abonnement in abonnements %}
                                    <tr>
                                        <th scope="row">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="chk_child" value="option1">
                                            </div>
                                        </th>
                                        <td>{{ abonnement.id }}</td>
        <td>{{ abonnement.date ? abonnement.date|date('Y-m-d') : '' }}</td>
        <td>{{ abonnement.prix }}</td>
        <td>{{ abonnement.terrain.id }}</td>
        <td>{{ abonnement.pack is not null ? abonnement.pack.nom : '' }}</td> <!-- Afficher le nom du pack -->
        <td>{{ abonnement.terrain.nom }}</td>
        <td>{{ abonnement.nomuser }}</td>
        <td>{{ abonnement.numtel }}</td>
        <td>{{ abonnement.prixtotal }}</td>
                                    </tr>
                                    {% endfor %}
                                </table>
                                <div class="noresult" style="display: none">
                                    <div class="text-center">
                                        <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px"></lord-icon>
                                        <h5 class="mt-2">Sorry! No Result Found</h5>
                                        <p class="text-muted mb-0">We've searched more than 150+ Orders We did not find any orders for you search.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end">
                                <div class="pagination-wrap hstack gap-2">
                                    <a class="page-item pagination-prev disabled" href="javascript:void(0);">
                                        Previous
                                    </a>
                                    <ul class="pagination listjs-pagination mb-0"></ul>
                                    <a class="page-item pagination-next" href="javascript:void(0);">
                                        Next
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    const deleteButtons = document.querySelectorAll('.remove-item-btn');

                    deleteButtons.forEach(button => {
                        button.addEventListener('click', function(event) {
                            event.preventDefault(); // Empêche le comportement par défaut du lien

                            // Récupérer l'ID du pack à supprimer à partir des attributs de données du bouton
                            const packId = this.getAttribute('data-pack-id');

                            if (packId) {
                                // Effectuer une requête AJAX POST pour supprimer le pack
                                fetch(this.getAttribute('data-delete-url'), {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify({
                                            idp: packId
                                        })
                                    })
                                    .then(response => {
                                        if (response.ok) {
                                            // Rediriger vers la page de liste des packs après suppression
                                            window.location.href = '{{ path("app_pack_show") }}';
                                        } else {
                                            console.error('La suppression du pack a échoué.');
                                        }
                                    })
                                    .catch(error => {
                                        console.error('Une erreur s\'est produite lors de la suppression du pack:', error);
                                    });
                            } else {
                                console.error('ID du pack à supprimer non trouvé.');
                            }
                        });
                    });
                });
            </script>



            {% endblock %}
