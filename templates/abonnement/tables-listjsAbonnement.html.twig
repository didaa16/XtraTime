<script>
    document.addEventListener('DOMContentLoaded', function() {
        const deleteButtons = document.querySelectorAll('.remove-item-btn');

        deleteButtons.forEach(button => {
            button.addEventListener('click', function(event) {
                event.preventDefault(); // Empêche le comportement par défaut du lien

                // Récupérer l'ID du pack à supprimer à partir des attributs de données du bouton
                const packId = this.getAttribute('data-pack-id');

                if (packId) {
                    // Effectuer une requête AJAX POST pour supprimer le pack
                    fetch(this.getAttribute('data-delete-url'), {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ idp: packId })
                    })
                    .then(response => {
                        if (response.ok) {
                            // Rediriger vers la page de liste des packs après suppression
                            window.location.href = '{{ path("app_pack_show") }}';
                        } else {
                            console.error('La suppression du pack a échoué.');
                        }
                    })
                    .catch(error => {
                        console.error('Une erreur s\'est produite lors de la suppression du pack:', error);
                    });
                } else {
                    console.error('ID du pack à supprimer non trouvé.');
                }
            });
        });
    });
</script>


                    

