{% block head %}
{# head du template Twig #}
    <head>
        <!-- Autres balises <head> -->
        <script src="{{ asset('build/fullcalendar/core/main.js') }}"></script>
        <script src="{{ asset('build/fullcalendar/daygrid/main.js') }}"></script>
        <link href="{{ asset('build/fullcalendar/daygrid/main.css') }}" rel="stylesheet" />
    </head>


{% endblock %}


{% block body %}
<div id="calendar"></div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        
        var calendar = new FullCalendar.Calendar(calendarEl, {
            plugins: [ '@fullcalendar/daygrid' ],
            events: {{ events|raw }}
        });
        
        calendar.render();
    });
</script>
{% endblock %}
