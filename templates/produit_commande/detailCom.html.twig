{% extends 'back.html.twig' %}

{% block body %}





  <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                                <h4 class="mb-sm-0">Order Details</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                                        <li class="breadcrumb-item active">Order Details</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-xl-20">
                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex align-items-center">
                                       <h5 class="card-title flex-grow-1 mb-0">Commande #{{ commande.refCommande }}</h5>
                                        <div class="flex-shrink-0">
                                          <!--  <a href="apps-invoices-details.html" class="btn btn-success btn-sm"><i class="ri-download-2-fill align-middle me-1"></i> Print</a>-->
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive table-card">
                                        <table class="table table-nowrap align-middle table-borderless mb-0">
                                            <thead class="table-light text-muted">
                                                <tr>
                                            <th class="sort" data-sort="nomProduit">Produit</th>
                                             <th class="sort" data-sort="nomProduit">Nom</th>
                                             <th class="sort" data-sort="ref">Réference</th>
                                             <th class="sort" data-sort="marque">Marque</th>
                                             <th class="sort" data-sort="prix">Prix</th>
                                             <th class="sort" data-sort="quantite">Quantité</th>
                                             <th class="sort" data-sort="taille">Taille</th>
                                             <th class="sort" data-sort="type sport">Type sport</th>
                                             <th class="sort" data-sort="desc">Description</th>
                                                </tr>
                                            </thead>
                                             <tbody>
                              {% for produit in produits %}
                <tr>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.ref }}</td>
                    <td>{{ produit.marque }}</td>
                    <td>{{ produit.prix }}</td>
                    <td>{{ produit.quantite }}</td>
                    <td>{{ produit.taille }}</td>
                    <td>{{ produit.type_sport }}</td>
                    <td>{{ produit.description }}</td>
                </tr>
            {% endfor %}
                        </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!--end card-->
                          
                            <!--end card-->
                        </div>
                        <!--end col-->
                        
                        <!--end col-->
                    </div>
                    <!--end row-->

                </div><!-- container-fluid -->
            </div><!-- End Page-content -->















{% endblock %}