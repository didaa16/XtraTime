{% extends 'front.html.twig' %}
{% block Fbody %}{% endblock %}
{% block Sbody %}{% endblock %}
{% block body %}
    <div>
        <h1>Edit Reservation</h1>
        {{ form_start(form) }}
        <div>
            {{ form_label(form.date) }}
            {{ form_widget(form.date) }}
            {{ form_errors(form.date) }}
        </div>
        <div>
            {{ form_label(form.duree) }}
            {{ form_widget(form.duree) }}
            {{ form_errors(form.duree) }}
        </div>
        <div>
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix) }}
            {{ form_errors(form.prix) }}
        </div>
        <div>
            <label for="form_equipements">Equipements:</label>
            <select id="form_equipements" name="{{ form.equipements.vars.full_name }}" multiple>
                {% for equipement in equipements %}
                    <option value="{{ equipement.id }}" {{ equipement in form.equipements.vars.data ? 'selected' }}>
                        {{ equipement.nom }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div>
            {{ form_label(form.User) }}
            {{ form_widget(form.User) }}
            {{ form_errors(form.User) }}
        </div>
        <button type="submit">Save Changes</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
