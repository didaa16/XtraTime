{# templates/Client/add.html.twig #}
{% extends 'front.html.twig' %}

{% block title %}Ajouter un terrain{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ajouter un terrain</h5>
                        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                                        {{ form_errors(form.nom) }}

                        </div>
                         <div class="mb-3">
                            {{ form_label(form.capacite, 'capacite', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
                                                       <div>  {{ form_errors(form.capacite) }} </div>

                        </div>
                        <div class="mb-3">
                            {{ form_label(form.type, 'type', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                                                        {{ form_errors(form.type) }}

                        </div>
                        <div class="mb-3">
                            {{ form_label(form.prix, 'prix', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                                                     <div>    {{ form_errors(form.prix) }} </div>

                        </div>
                        <div class="mb-3">
                            {{ form_label(form.disponibilite, 'disponibilite', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.disponibilite, {'attr': {'class': 'form-control'}}) }}
                                                    <div>     {{ form_errors(form.disponibilite) }} </div>

                        </div>
                        
                       
                        <div class="mb-3">
                            {{ form_label(form.img, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.img, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.img) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.ref, 'ref', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.ref, {'attr': {'class': 'form-control'}}) }}
                                                        {{ form_errors(form.ref) }}

                        </div>
                      
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
