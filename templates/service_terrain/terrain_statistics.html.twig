{% extends 'back.html.twig' %}

{% block title %}Statistiques des terrains{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-4">Statistiques des terrains</h1>
        
        <!-- Tableau des statistiques et graphique -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <table class="table mt-4">
                    <thead>
                        <tr>
                            <th>Type de terrain</th>
                            <th>Nombre de terrains</th>
                            <th>Graphique</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for stat in terrainStatistics %}
                            <tr>
                                <td>{{ stat.type }}</td>
                                <td>{{ stat.count }}</td>
                                <td>
                                    <canvas id="terrainChart-{{ loop.index }}"></canvas>
                                    <script>
                                        document.addEventListener('DOMContentLoaded', function () {
                                            var ctx{{ loop.index }} = document.getElementById('terrainChart-{{ loop.index }}').getContext('2d');
                                            var myChart{{ loop.index }} = new Chart(ctx{{ loop.index }}, {
                                                type: 'bar',
                                                data: {
                                                    labels: ['{{ stat.type }}'],
                                                    datasets: [{
                                                        label: 'Nombre de terrains',
                                                        data: [{{ stat.count }}],
                                                        backgroundColor: [
                                                            'rgba(255, 99, 132, 0.2)',
                                                            'rgba(54, 162, 235, 0.2)',
                                                            'rgba(255, 206, 86, 0.2)',
                                                            'rgba(75, 192, 192, 0.2)',
                                                            'rgba(153, 102, 255, 0.2)',
                                                            'rgba(255, 159, 64, 0.2)'
                                                        ],
                                                        borderColor: [
                                                            'rgba(255, 99, 132, 1)',
                                                            'rgba(54, 162, 235, 1)',
                                                            'rgba(255, 206, 86, 1)',
                                                            'rgba(75, 192, 192, 1)',
                                                            'rgba(153, 102, 255, 1)',
                                                            'rgba(255, 159, 64, 1)'
                                                        ],
                                                        borderWidth: 1
                                                    }]
                                                },
                                                options: {
                                                    scales: {
                                                        yAxes: [{
                                                            ticks: {
                                                                beginAtZero: true
                                                            }
                                                        }]
                                                    }
                                                }
                                            });
                                        });
                                    </script>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
